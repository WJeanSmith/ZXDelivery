<?xml version="1.0" encoding="gb2312"?>
<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
节点: card
*.id,name: 合成卡标识
*.ip,port: 合成卡地址
*.enable: 1,启用;其它,关闭

节点: card.contents.content
*.object: 对象宏定义
*.sleep: 多对象时,两个对象的间隔
*.text: 待播发的语音内容
*.times: 重复播发次数
*.interval: 重发间隔,单位秒
*.repeat: 单次内容循环次数
*.reinterval: 单次内容循环间隔

节点: card.contents.resource
*.key: 待处理内容
*.value: 替换内容
+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
<netvoice>
  <card id="dt" name="3#">
    <ip>192.168.11.9</ip>
    <port>8000</port>
    <enable>1</enable>
    <contents>
        <content id="pound">
            <object>tk</object>
            <sleep>650</sleep>
            <text>tk过磅完毕,请下磅</text>
            <times>1</times>
            <interval>180</interval>
            <repeat>2</repeat>
            <reinterval>1200</reinterval>
        </content>
    </contents>
    <resource>
            <res key="藏" value="藏[=zang4]" />
            <res key="朴" value="朴[=piao2]" />
    </resource>
  </card>
</netvoice>
